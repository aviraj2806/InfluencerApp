<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".fragment.SubmitVideoFragment">

    <TextView
        android:id="@+id/txtSubmitVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:padding="10dp"
        android:text="SubmitVideo"
        android:textColor="#e1e1e1"
        android:textSize="28sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llUploadVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/curved_corners_white"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/curved_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Enter Title"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textColor="#212121"
                    android:textColorHint="#656565"
                    android:theme="@style/MyEditText"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_input"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="top"
                    android:hint="Enter Description"
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:textColor="#212121"
                    android:theme="@style/MyEditText"
                    android:textColorHint="#656565"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Upload Video :"
                    android:textColor="#424242"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/curved_input"
                    android:padding="30dp"
                    android:src="@drawable/video" />

                <Button
                    android:id="@+id/btnPublish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_primarycolor"
                    android:fontFamily="@font/roboto_light"
                    android:text="Publish"
                    android:textAllCaps="false"
                    android:textColor="#e1e1e1"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>