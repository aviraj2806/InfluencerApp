<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/txtTitleLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="Influencer App"
        android:textColor="#e1e1e1"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imgLogoLogin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#e1e1e1"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:id="@+id/linearLayoutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_corners_white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/robotomedium"
                android:text="USER ID : admin"
                android:textColor="#212121"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/etLoginUserId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/curved_input"
                android:ems="10"
                android:fontFamily="@font/robotomedium"
                android:hint="Enter Mobile No./Email"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:textColor="#212121"
                android:textColorHint="#9e9e9e"
                android:textSize="14sp"
                android:theme="@style/MyEditText"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotomedium"
                android:text="PASSWORD : admin"
                android:textColor="#212121"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/etLoginPass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/curved_input"
                android:ems="10"
                android:fontFamily="@font/robotomedium"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:textColor="#212121"
                android:textColorHint="#9e9e9e"
                android:textSize="14sp"
                android:theme="@style/MyEditText"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/curved_primarycolor"
                android:fontFamily="@font/robotomedium"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#e1e1e1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:drawableRight="@drawable/ic_next_arrow"
        android:drawablePadding="5dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="Not Registered Yet?"
        android:textColor="#e1e1e1"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txtForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:drawableEnd="@drawable/ic_next_arrow"
        android:drawablePadding="5dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="Forgot Password?"
        android:textColor="#e1e1e1"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

</LinearLayout>